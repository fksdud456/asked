         <a class="btn bg-dark text-white font-weight-bold faa-parent animated-hover" href="/signup"><i class="fas fa-smile fa-1x text-white faa-bounce"></i> Register </a>
         <a class="btn bg-dark text-white font-weight-bold faa-parent animated-hover" href="/login"><i class="fas fa-smile fa-1x text-white faa-bounce"></i> Login </a>
    <% end %>
    </span>
   </nav>
